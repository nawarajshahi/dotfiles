[color]
  branch      = auto
  interactive = auto
  diff        = auto
  status      = auto
  ui          = auto

[apply]
  whitespace = nowarn

[core]
  autocrlf = input
  safecrlf = false
  editor   = vim
  filemode = true

[gpg]
  program = gpg2

[commit]
  gpgsign = true

[pull]
  default = current

[push]
  default = current

[transfer]
  fsckobjects = true

[fetch]
  fsckobjects = true

[receive]
  fsckobjects = true

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[user]
  useConfigOnly = true

[init]
  defaultBranch = main

[alias]
  ctags = !.git/hooks/ctags
