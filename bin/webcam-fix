#!/bin/bash

set -o errexit

# Requires xawtv package
# GUI for tweaking settings is gtk-v4l

/usr/bin/v4lctl bright 23%
/usr/bin/v4lctl contrast 50%
/usr/bin/v4lctl color 50%

/usr/bin/v4lctl setattr "Sharpness" 50%
/usr/bin/v4lctl setattr "White Balance Temperature, Auto" false
/usr/bin/v4lctl setattr "White Balance Temperature" 37%
