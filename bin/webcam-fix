#!/bin/bash

set -o errexit

# GUI for tweaking settings is gtk-v4l
#
# v4l2-ctl --list-devices
# v4l2-ctl -d /dev/video0 --list-ctrls

VIDEO_DEVICE="/dev/video1"

# Settings for Microsoft Pro Cam
#/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl brightness=80
#/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl contrast=5
#/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl saturation=100
#/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl sharpness=25
#
#/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl focus_auto=0
#/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl focus_absolute=12
#
#/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl white_balance_temperature_auto=0
#/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl white_balance_temperature=5000

# Settings for Nexigo cam
/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl brightness=133
/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl contrast=135
/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl saturation=130
/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl sharpness=160
/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl gamma=126

/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl focus_auto=0
/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl focus_absolute=70

/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl white_balance_temperature_auto=0
/usr/bin/v4l2-ctl -d ${VIDEO_DEVICE} --set-ctrl white_balance_temperature=5500
